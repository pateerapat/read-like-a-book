<script>
    var app = new Vue({
        el: '#app',
        data: {
            selectedCollection: "default",
            nowCollection: [],

            bookModifier: "default",
            rewardModifier: "default",
            historyModifier: "default",
        },
        watch: {
            selectedCollection(next, pre) {
                axios
                .get("https://read-like-a-book-api.herokuapp.com/"+next+"/get/all")
                .then(
                    (response) => {
                        this.nowCollection = response.data.payload.data;
                    },
                );
            },
        }
    });
</script>