<script>
    var app = new Vue({
        el: '#app',
        data: {
            rewardList: [],
            nowShowModal: false,
            nowItemModal: [],
        },
        created() {
            axios
                .get("https://read-like-a-book-api.herokuapp.com/reward/get/all")
                .then(
                    (response) => {
                        if (response.data.success) {
                            this.rewardList = response.data.payload.data;
                        } else {
                            console.log("Failed to get data.");
                        };
                    },
                );
        },
    });
</script>