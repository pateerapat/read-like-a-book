<!DOCTYPE html>
<html lang="en">
<!-- Head Tag Include -->
<%- include("../partials/head-tag-partial.ejs") %>
<!-- Head Tag Include -->

<!-- Header Include -->
<%- include("../partials/header-partial.ejs") %>
<!-- Header Include -->

<body class="d-flex flex-column min-vh-100">
    <div id="app">
        <div class="container self-font-family mb-5">
            <!-- Categories -->
            <div class="d-flex justify-content-center mt-5">
                <a class="mx-4 text-decoration-none text-secondary border-bottom">
                    <h3>ของรางวัล</h3>
                </a>
                <a href="/history" class="mx-4 text-decoration-none text-dark border-bottom">
                    <h3>ประวัติการแลกของรางวัล</h3>
                </a>
            </div>
            <!-- Categories -->
            <div class="row">
                <div class="offset-9 col-3 p-5">
                    <div class="card px-3 py-2 me-3">
                        <span class="text-dark text-start">
                            ดาวสะสม
                        </span>
                        <h4 class="text-end text-warning">
                            <%= userData.user_point %> <i class="fa-solid fa-star"></i>
                        </h4>
                    </div>
                    
                </div>
                <div class="col-4 mt-4" v-for="reward in rewardList">
                    <div class="card mx-5 h-100">
                        <div class="card-body d-flex flex-column">
                            <!-- Reward Cover -->
                            <a href="#">
                                <img class="card-img-top rounded" :src="reward.cover_img">
                            </a>
                            <!-- Reward Cover -->
    
                            <!-- Reward Description -->
                            <div class="card-body">
                                <h5 class="card-title text-dark fw-bold mt-2">
                                    {{ reward.name }}
                                </h5>
                                <div class="d-flex justify-content-between align-items-center">
                                    <p>
                                        ใช้ดาว
                                    </p>
                                    <p class="btn bg-warning">
                                        <span class="text-white">
                                            {{ reward.price }} <i class="fa-solid fa-star"></i>
                                        </span>
                                    </p>
                                </div>
                            </div>
                            <template v-if="reward.in_stock > 0">
                                <button class="btn btn-primary mt-auto mx-3" @click="nowItemModal=reward; nowShowModal=true">แลกของรางวัล</button>
                            </template>
                            <template v-if="reward.in_stock <= 0">
                                <button class="btn btn-primary mt-auto mx-3 disabled">ของรางวัลหมด</button>
                            </template>
                            <!-- Reward Description -->
                        </div>
                    </div>
                </div>    
            </div>
        </div>

        <!-- Modal -->
        <div class="self-font-family" v-show="nowShowModal">
            <div class="modal-mask">
                <div class="modal-wrapper">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <!-- Modal Body -->
                            <div class="modal-body px-4">
                                <p class="fs-5 mt-4">
                                    ใช้ดาวจำนวน
                                    <span class="ps-3 fs-5 fw-bold text-warning">
                                        {{ nowItemModal.price }}
                                        <i class="fa-solid fa-star fa-sm"></i>
                                    </span>
                                </p>
                                <p class="fs-6">
                                    ทำการแลก
                                    <span class="fs-6 fw-bold">
                                        {{ nowItemModal.name }}
                                    </span>
                                </p>
                            </div>
                            <!-- Modal Body -->
                            <!-- Modal Footer -->
                            <div class="modal-footer">
                                <button class="btn btn-secondary" @click="nowShowModal=false">ยกเลิก</button>
                                <button class="btn btn-primary">ยืนยันการแลกรางวัล</button>
                            </div>
                            <!-- Modal Footer -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal -->

    </div>

    <!-- Footer Include -->
    <%- include("../partials/footer-partial.ejs") %>
    <!-- Footer Include -->\
    

</body>
<!-- Vue Include -->
<%- include("../vues/rewards-vue.ejs") %>
<!-- Vue Include -->
</html>