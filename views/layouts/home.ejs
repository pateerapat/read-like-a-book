<!DOCTYPE html>
<html lang="en">
<!-- Head Tag Include -->
<%- include("../partials/head-tag-partial.ejs") %>
<!-- Head Tag Include -->

<!-- Header Include -->
<%- include("../partials/header-partial.ejs") %>
<!-- Header Include -->

<body class="d-flex flex-column min-vh-100">
    <div id="app">
        <div class="container self-font-family mb-5">
            <!-- Categories -->
            <div class="d-flex justify-content-center mt-5">
                <a href="#" class="mx-4 text-decoration-none text-dark border-bottom"><h3>มาใหม่</h3></a>
                <a href="#" class="mx-4 text-decoration-none text-dark border-bottom"><h3>แนะนำ</h3></a>
                <a href="#" class="mx-4 text-decoration-none text-dark border-bottom" ><h3>หมวดหมู่</h3></a>
            </div>
            <!-- Categories -->
            <!-- Book Template -->
            <div class="row">
                <div class="col-4 mt-5" v-for="book in bookList">
                    <div class="card mx-5 h-100">
                        <div class="card-body d-flex flex-column">
                            <!-- Book Cover -->
                            <a href="#">
                                <img class="card-img-top rounded" :src="book.cover_img">
                            </a>
                            <!-- Book Cover -->

                            <!-- Book Description -->
                            <div class="card-body">
                                <form method="POST" action="/buy">
                                <input type="hidden" name="id" :value="book.id">
                                <a class="text-decoration-none" href="#">
                                    <h5 class="card-title text-dark fw-bold mt-2">
                                        {{  book.name }}
                                    </h5>
                                </a>
                                
                                <p>
                                    <span class="fw-bold">
                                        สำนักพิมพ์:
                                    </span>
                                        {{ book.publisher }}<br>
                                    <span class="fw-bold">
                                        ผู้เขียน:
                                    </span>
                                    <template v-for="author in book.author">
                                        {{ author }}
                                    </template>
                                </p>
                                <p class="btn bg-warning">
                                    <span class="text-white">
                                        {{ parseInt(book.price) }} ฿
                                    </span>
                                </p>
                            </div>
                            <button class="btn btn-primary mt-auto mx-3">เพิ่มในตะกร้า</button>
                                </form>
                            
                            <!-- Book Description -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- Book Template -->
        </div>
    </div>

    <!-- Footer Include -->
    <%- include("../partials/footer-partial.ejs") %>
    <!-- Footer Include -->

</body>
<!-- Vue Include -->
<%- include("../vues/home-vue.ejs") %>
<!-- Vue Include -->
</html>